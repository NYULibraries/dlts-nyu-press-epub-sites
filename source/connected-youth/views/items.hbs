{{=<% %>=}}
{{#items}}
  <div itemscope itemtype="http://schema.org/Book" class="library-item">
    <div class="img_hold">
      <a aria-hidden="true" role="presentation" tabindex="-1" class="item-link" href="<%appUrl%>/details/{{identifier}}">
        <img itemprop="image" class="img-responsive" src="<%readiumUrl%>/{{thumbHref}}" title="{{title}}" alt=""  role="presentation" />
      </a>
    </div>
    <div class="book-info">
      <h3 itemprop="name" class="book-title"><a class="item-link" href="<%appUrl%>/details/{{identifier}}">{{title}}{{#if subtitle}}<span itemprop="name" class="book-subtitle">{{subtitle}}</span>{{/if}}</a></h3>
  
      <div class="author">by <span itemprop="author">{{author}}</span></div>
      <div itemprop="description">{{{truncate this 900}}}</div>
      <div class="buttons">
        <a class="btn btn-default" href="<%appUrl%>/details/{{identifier}}">View Details</a>
        <a class="btn btn-default" href="<%appUrl%>/book/{{identifier}}">Read Online</a>
      </div>
    </div>
  </div>
{{/items}}
